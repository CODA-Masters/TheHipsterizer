<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#ff000000"
        android:weightSum="1"
        android:gravity="bottom">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:id="@+id/filtersScroll"
            android:layout_weight="0.92">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/filtersLayout">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin filtro"
                    android:id="@+id/button_noneFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro Sepia"
                    android:id="@+id/button_sepiaFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro Aqua"
                    android:id="@+id/button_aquaFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro BlackBoard"
                    android:id="@+id/button_blackboardFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro WhiteBoard"
                    android:id="@+id/button_whiteboardFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro Posterize"
                    android:id="@+id/button_posterizeFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro Negativo"
                    android:id="@+id/button_negativeFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro Mono"
                    android:id="@+id/button_monoFilter" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro Solarize"
                    android:id="@+id/button_solarizeFilter" />
            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button_capture"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/camera_suprema"
            android:layout_marginLeft="15dp"
            android:focusableInTouchMode="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/capturedImageView"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_ChangeCamera"
            android:layout_marginLeft="30dp"
            android:background="@drawable/switch_camera" />

    </LinearLayout>

</LinearLayout>
